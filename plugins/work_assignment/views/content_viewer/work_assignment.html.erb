<% extend WorkAssignmentPlugin::Helper %>

<% unless @page.body.blank? %>
  <div><%= @page.body %></div>
  <hr/>
<% end %>

<div id='public-profile-search'>
  <% unless @page.expired? %>
    <h4> Remaining time for sending files: </h4>
    <%= time_ago_in_words(@page.ending, include_seconds: true) %>
  <% else %>
    <h4> The time limit for sending files expired!</h4>
  <% end %>
</div>

<%= display_submissions(@page, user) %>

<%= javascript_include_tag '../plugins/work_assignment/show_versions' %>
