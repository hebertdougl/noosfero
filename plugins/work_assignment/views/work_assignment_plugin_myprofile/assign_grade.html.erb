<h1>Assign grade</h1>

<table> 
  <tbody>
    <tr>
      <th><%= _('Author name: ') %></th>
      <th><%= @submission.setting[:author_name] %></th>
    </tr>

    <tr>
      <td><%= _('Nome arquivo') %></td>
      <td><%=  @submission.name %></td>
    </tr>

    <tr>
      <td><%= _('Update at') %></td>
      <td><%=  @submission.updated_at %></td>
    </tr>

    <tr>
      <td><%= _('Last evaluation date') %></td>
      <td><%=  @submission.valuation_date ? @submission.valuation_date : '-' %></td>
    </tr>

    <tr>
      <td><%= _('Current Grade') %></td>
      <td><%=  @submission.valuation_date ? @submission.grade_version : '-' %></td>
    </tr>
  </tbody>
</table>

<%= labelled_form_for :upload_file do |f| %>

  <%= hidden_field_tag('submission', @submission.id) %>

  <%= labelled_form_field _('Grade'), f.text_field(:grade_version) %>

  <%= labelled_check_box(_('Final Grade'), 'upload_file[final_grade]', true) %>

  <% button_bar do %>
    <%= submit_button :assign_grade, _('Assign Grade') %>
    <%= modal_close_button(_('Cancel')) %>
  <% end %>

<% end %>
